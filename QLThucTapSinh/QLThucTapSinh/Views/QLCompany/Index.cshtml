
@{
    ViewBag.Title = "Quản lý Công ty";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


@using QLThucTapSinh.Models;
@model List<QLThucTapSinh.Models.Organization>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://fonts.googleapis.com/css?family=Pacifico&display=swap" rel="stylesheet">
<link href="~/Content/Quanli/style.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/Plugins/jquery-1.10.2.js")" type="text/javascript"></script>
<script src="~/Scripts/Controller/CompanyController.js"></script>
<div class="text-primary" style="text-align:center"> DANH SÁCH CÔNG TY</div>
<h1 class="page-header">
    <a href="/QLCompany/Create" class="btn btn-outline btn-primary">Thêm</a>
</h1>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="table">
        <thead>
            <tr>
                <th class="th">Tên công ty</th>
                <th  class="th">Địa chỉ</th>
                <th  class="th">Điện thoại</th>
                <th  class="th">Email</th>
                <th  class="th">Ngày bắt đầu</th>
                <th  class="th">Trạng thái</th>
                <th  class="th">Gia hạn</th>
                <th  class="th">Hoạt động</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>

                <td>@item.Email</td>
                <td>@Html.FormatValue(@item.StartDay, "{0:dd/MM/yyyy}")</td>
                <td>
                    @if (item.Status == true)
                    {<a href="#" class="btn-active" data-id="@item.ID">Kích hoạt </a>}
                    else
                    { <a href="#" class="btn-active" data-id="@item.ID">Khóa </a>}
                </td>

                <td style="" class="idSort" data-ids="@item.ID">
                    @Html.DropDownList("Gender", (IEnumerable<SelectListItem>)ViewBag.Month, "Chọn tháng", htmlAttributes:
                    new { @class = "gender ", /*style = "width:19.8% ; margin-top: 7px ; margin-left:-12px;padding: 1px 0px; height:40px"*/ })
                </td>

                <td>
                    <a href="/QLCompany/Edit/@item.ID" class="btn btn-outline btn-primary">Sửa</a> ||
                    <a href="/QLCompany/Delete/@item.ID" class="btn btn-outline btn-primary">Xóa</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
