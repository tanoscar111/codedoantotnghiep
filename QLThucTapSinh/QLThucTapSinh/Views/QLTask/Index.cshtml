
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    var intership = (List<QLThucTapSinh.Models.InternShip>)ViewBag.listin;
}
@using QLThucTapSinh.Models;
@model List<QLThucTapSinh.Common.TaskClass>
<link href="https://fonts.googleapis.com/css?family=Pacifico&display=swap" rel="stylesheet">
<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<link type="text/css"
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Google+Sans:400,500,700" />
@*<link rel="stylesheet" href="~/Content/Home/index.css" />*@
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<h1 class="page-header">
    @if (@Session["Role"].ToString() == "4")
    {
        <a href="/QLTask/Create" id="them" class="them btn btn-outline btn-primary">Thêm</a>
    }
</h1>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
<div class="example">
    <div class="col-md-7">
        <div class="row">

            <h2 style="width:100%;text-align:center">Danh sách bài học</h2>
            <table class="table ble">
                <thead>
                    <tr>
                        <th></th>
                        <th>Bài học</th>
                        @if (@Session["Role"].ToString() == "2")
                        {
                            <th>Leader</th>
                        }
                        <th>Sửa</th>
                        <th>Xóa</th>

                    </tr>
                </thead>

                <tbody id="myTable">
                    @foreach (var item in Model)
                    {
                        {
                            <tr>
                                <td class="text-center"><input name="dschon" type="checkbox" value="@item.TaskID" </td>
                                <td>@item.TaskName</td>
                                @if (@Session["Role"].ToString() == "2")
                                {
                                    <td>@item.FullName</td>
                                }
                                <td><a href="/QLTask/Edit/@item.TaskID" class="btn btn-outline btn-primary">Sửa</a></td>
                                <td><a href="/QLTask/Delete/@item.TaskID" class="btn btn-outline btn-primary">Xóa</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (@Session["Role"].ToString() == "4")
    {
        <div class="col-md-5 ban2">
            <div class="row">
                <h2 style="width:100%;text-align:center">Danh sách khóa học</h2>
                <table class="table ble" style="margin-left: 47px">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Danh sách khóa học</th>
                        </tr>
                    </thead>
                    @{ int i = 1;}
                    @foreach (var item in intership)
                    {
                        var dem = i;
                        {
                            <tr>
                                <td>@dem</td>
                                <td><a href="#" class="btn-task" data-id="@item.InternshipID">@item.CourseName</a></td>
                            </tr>
                        }
                        i++;
                    }

                </table>
            </div>
        </div>
    }

</div>
<script src="https://kit.fontawesome.com/e00695e77f.js" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
<script src="@Url.Content("~/Scripts/Plugins/jquery-1.10.2.js")" type="text/javascript"></script>

<script src="~/Scripts/Controller/QLTaskControl.js"></script>


