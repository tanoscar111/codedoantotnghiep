
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@using QLThucTapSinh.Models;
@model List<QLThucTapSinh.Models.Organization>
<div class="text-primary"> DANH SÁCH TRƯỜNG HỌC</div>
@*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
<link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/Quanli/style.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1 class="page-header">
    <a class="btn btn-outline btn-primary" onclick="PopupForm('@Url.Action("","QLSchool")')">Thêm</a>
</h1>
@*<input class="form-control" id="myInput" type="text" placeholder="Search..">*@
<table id="schoolTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tên công ty</th>
            <th>Địa chỉ</th>
            <th>Điện thoại</th>
            <th>Email</th>
            <th>Trạng thái</th>
            <th>Sửa</th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>
                    @if (item.Status == true)
                    {<a href="#" class="btn-active" data-id="@item.ID">Kích hoạt </a>}
                    else
                    { <a href="#" class="btn-active" data-id="@item.ID">Khóa </a>}
                </td>
                <td><a href="/QLCompany/Edit/@item.ID" class="btn btn-outline btn-primary">Sửa</a></td>
            </tr>
        }
    </tbody>
</table>

<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
@section jsFooter{

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    @*<script src="~/Scripts/dataTables.bootstrap.min.js"></script>*@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

    <script>
        var Popup, dataTable;
        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Fill Organization',
                        height: 800,
                        width: 1200,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }

                    });
                });
        }
    </script>
}